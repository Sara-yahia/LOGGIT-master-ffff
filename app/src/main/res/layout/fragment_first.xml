<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sara.loggit.FirstFragment">

    <!--TextView and Button displayed in First Fragment -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/from"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="bold"
            android:textSize="20dp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#f16f7d" />

        <TextView
            android:id="@+id/to"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="bold"
            android:textSize="20dp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#f16f7d" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#f16f7d" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#f16f7d" />


        <TextView
            android:id="@+id/TicetNumberf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Ticket Price: 3 LE"
            android:drawableLeft="@drawable/price"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="bold"
            android:textSize="20dp"/>



        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#f16f7d" />

        <TextView
            android:id="@+id/QRcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  QR-CODE  "
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="bold"
            android:textSize="20dp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
             />


    </LinearLayout>






</RelativeLayout>