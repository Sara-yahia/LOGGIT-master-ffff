<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    tools:context="com.example.sara.loggit.TripsListActivity">

    <ListView
        android:id="@+id/tripList_Trips_ListView"
        style="@style/Widget.AppCompat.ListView.Menu"
        android:layout_width="180dp"
        android:layout_height="460dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/timelistView"
        android:cacheColorHint="@color/colorPrimaryDark"
        android:contextClickable="true"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/leavingTime"
        android:layout_toStartOf="@+id/timelistView"
        android:fontFamily="bold"
        android:text="Bus ID"
        android:textColor="#000"
        android:textSize="20dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#f16f7d"
        android:id="@+id/view" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#f16f7d"
        />

    <TextView
        android:id="@+id/leavingTime"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_toEndOf="@+id/tripList_Trips_ListView"
        android:drawableLeft="@drawable/time"
        android:fontFamily="bold"
        android:text=" Arrival Time"
        android:textColor="#000"
        android:textSize="20dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#f16f7d"
        android:id="@+id/view2" />

    <ListView
        android:id="@+id/timelistView"
        android:layout_width="200dp"
        android:layout_height="460dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />



</RelativeLayout>
